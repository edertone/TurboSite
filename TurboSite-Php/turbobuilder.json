{
    "metadata": {
        "name": "turbosite-php",
        "description": "Php based web framework",
        "builderVersion": "0.0.4"
    },
    "validate": {
        "phpNamespaces" : {
	        "enabled": true,
	        "mandatory": true,
	        "mustContain": ["org\\turbosite\\src\\$path"],
	        "excludes": ["autoloader.php", "index.php"]
	    },
        "copyrightHeaders": [
	    	{
	    		"path": "extras/copyright headers/TurboSite-Php.txt",
	    		"appliesTo": "src",
	    		"includes": ["php"],
	    		"excludes": ["autoloader.php"]
	    	}
	    ]
    },
    "build": {
        "lib_php": {
        }
    },
    "release": {
    },
    "test": {
        "php": {
            "enabled": false,
            "coverageReport": true,
            "coverageReportOpenAfterTests": true
        }
    }
}